@model IEnumerable<Spice.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://kit.fontawesome.com/42ecad6d7c.js"></script>
</head>

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-action="Create">Create new</a>
        </div>
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var i in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => i.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => i.Category.Name)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="i.Id" />
                    </td>
                </tr>
                }
            </table>
        }
        else
        {
            <p>No Sub Category exists</p>
        }
    </div>
</div>


